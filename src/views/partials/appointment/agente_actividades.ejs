<%+ endSection %> <%+ section('scripts') %>
<script type="text/javascript">
	function consultarFecha(id) {
		let input = document.getElementById('input-buscar');

		let a = document.getElementById(id);

		if (input.value !== '') {
			location.href = `http://localhost:3000/appointments/agent-activities/${input.value}`;
		} else {
			location.href = `http://localhost:3000/appointments/agent-activities`;
		}

		return false;
	}
</script>
