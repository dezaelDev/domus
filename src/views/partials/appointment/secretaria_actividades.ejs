<%+ section('scripts') %>
<script type="text/javascript">

  function activateBtn(){

    if (document.getElementById('btn-success').textContent == 'EDITAR')
    {
      document.getElementById('input-fecha').removeAttribute("disabled");
      document.getElementById('input-agente').removeAttribute("disabled");
      document.getElementById('input-motivo').removeAttribute("disabled");
      document.getElementById('input-estado').removeAttribute("disabled");
      document.getElementById('input-cliente').removeAttribute("disabled");
      document.getElementById('btn-success').textContent = "GUARDAR";
    }else if(document.getElementById('btn-success').textContent == 'GUARDAR'){
      document.getElementById('input-fecha').setAttribute("disabled","disabled");
      document.getElementById('input-agente').setAttribute("disabled","disabled");
      document.getElementById('input-motivo').setAttribute("disabled","disabled");
      document.getElementById('input-estado').setAttribute("disabled","disabled");
      document.getElementById('input-cliente').setAttribute("disabled","disabled");
      document.getElementById('btn-success').textContent = "EDITAR";
    }

    


  }

</script>
