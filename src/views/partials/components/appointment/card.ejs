<div class="container-fluid">
	<div class="row">
		<div class="col-12">
			<!-- Default box -->
			<div class="card">
				<div class="card-header">
					<h3 class="card-title">
						ACTIVIDAD NRO. <%=appointment.id_cita %>
					</h3>
					<div class="card-tools">
						<button
							type="button"
							class="btn btn-tool"
							data-card-widget="collapse"
							title="Collapse"
						>
							<i class="fas fa-minus"></i>
						</button>
					</div>
				</div>
				<div class="card-body">
					<table
						id="example2"
						class="table table-bordered table-hover"
					>
						<thead>
							<tr>
								<th>Cliente Nro.</th>
								<th>Cliente</th>
								<th>Motivo</th>
								<th>Ubicacion</th>
								<th>Dirección</th>
								<th>Teléfono</th>
								<th>Fecha y Hora</th>
								<th>Estado</th>
							</tr>
						</thead>
						<tbody>
							<tr>
								<!--Codigo identificador Cliente-->
								<td>
									<label name=""
										><%= appointment.id_cliente %>
									</label>
								</td>
								<td>
									<label name="cliente"
										><%=appointment.nombre_apellido_cliente
										?
										appointment.nombre_apellido_cliente
										: appointment.razon_social
										%></label
									>
								</td>
								<td>
									<label name="motivo"
										><%= appointment.motivo
										%></label
									>
								</td>
								<td>
									<label name="ubicacion"
										><%= appointment.ubicacion
										%></label
									>
								</td>
								<td>
									<label name="direccion"
										><%= appointment.direccion
										%></label
									>
								</td>
								<td>
									<label name="telefono"
										><%= appointment.telefono
										%></label
									>
								</td>
								<td>
									<label name="fecha_hs" type="text"
										><%= appointment.fecha_hs
										%></label
									>
								</td>
								<td>
									<label name="estado"
										><%= appointment.estado
										%></label
									>
								</td>
							</tr>
						</tbody>
					</table>
					<%- include('./btn.ejs',{estado: appointment.estado})
					%>
					<!--CONTROL MODAL DE CANCELAR (POR SI HACE FALTA)-->
					<!-- <button type="button" name="cancelar" class="btn btn-danger" style="width: 150px; margin-top: 5px;" data-toggle="modal" data-target="#modal-danger">
                                  CANCELAR
                                </button> -->
				</div>
				<!-- /.card-body -->

				<!-- /.card-body -->
			</div>
		</div>
	</div>
</div>
